<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/ipfl_iv_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/tag_download_path_directory" />

        <TextView
            android:id="@+id/ipfl_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Android"
            android:textColor="@color/colorTextTitleBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ipfl_tv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="200k"
            android:textColor="@color/colorSymbolBlue"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

    </LinearLayout>

</FrameLayout>